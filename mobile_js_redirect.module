<?php

/**
 * Implements hook_init().
 */

function mobile_js_redirect_init() {
  if (user_is_anonymous()) {
    drupal_add_js('misc/jquery.cookie.js', 'file');
  }

  $enabled = variable_get('mobile_js_redirect_enable', 1);

  if ($enabled) {
    // add data to Drupal.settings
    drupal_add_js();
  }
}

/**
 * Implements hook_menu().
 */

function mobile_js_redirect_menu() {
  $items['admin/config/system/mobile_js_redirect'] = array(
    'title' => 'Mobile Javascript Redirect',
    'description' => 'Manage settings for mobile redirection via Javascript.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('mobile_js_redirect_admin_settings'),
    'access arguments' => array('administer site configuration'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'mobile_js_redirect.admin.inc',
  );

  return $items;
}